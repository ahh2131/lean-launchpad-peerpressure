<div class="row">
	<div class="vigme-settings col-md-4 col-md-offset-4">
		<div class="row">
			<div class="col-md-offset-0 vigme-center-text">
				<% if flash[:notice] %>
				<div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
				<% end %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-0">
				<h2 class="vigme-center-text vigme-header-2">Profile Settings</h2>
			</div>
		</div>
		<div class="row">
			<div class="vigme-line"></div>
		</div>
		<div class="row">
			<div class="col-md-offset-1">
				<%= form_for @user, url: {action: "update"} do |f| %>
				 <div class="vigme-field-div">
				  <%= f.label :avatar %><br />
				  <%= f.file_field :avatar %>
				</div>
				<div class="row">
					<div class="vigme-line"></div>
				</div>
				<div class="vigme-field-div">

				  <%= f.label :name %>:
				  <%= f.text_field :name, class: "vigme-settings-field" %><br />
				</div>
				 <div class="row">
				   <div class="vigme-line"></div>
				 </div>

				  <div class="vigme-field-div">

				   <%= f.label :email %>:
				   <%= f.text_field :email, class: "vigme-settings-field" %><br />
				   </div>
				   <div class="vigme-line"></div>
				   <div class="vigme-field-div">

				    <%= f.label :gender %>:<a>   </a>
				    <%= label :gender_m, 'Male' %>
				    <%= f.radio_button :gender, 'M', class: "vigme-settings-field" %>
				    <%= label :gender_f, 'Female' %>

				    <%= f.radio_button :gender, 'F', class: "vigme-settings-field" %><br />
				    </div>
				    <div class="vigme-line"></div>
				  </div>
				  <div class="vigme-center-text vigme-field-div">
				  <%= f.submit "Update Profile", class: "vigme-settings-button" %>
				</div>
				<% end %>
			
		</div>
	</div>
</div>