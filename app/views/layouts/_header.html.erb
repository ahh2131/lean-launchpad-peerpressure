<% if session[:user_id] || !@home_page || user_signed_in? %>
<div class="vigme-nav">
<div class="row vigme-font vigme-logo-black col-xs-offset-1"><span class="demo-heading-note"></span>
<div class="col-md-2">
 <a style="text-decoration: none;"class="vigme-logo-text" href="<%= root_url %>"> <h4 class="vigme-logo-header-4">VIGME</h4></a>
</div>
<div class="col-md-2 vigme-nav-margin">
  <a style="text-decoration: none;" class="vigme-nav-text col-md-offset-3 vigme-logo-text" href="<%= discover_path %>">Discover</a>
</div>

<div class="col-md-2 vigme-nav-margin vigme-nav-menu">
  <a style="text-decoration: none;" class="vigme-nav-text col-md-offset-3 vigme-logo-text" href="<%= root_url %>">Menu</a>
</div>

</div>
</div>


<div class="vigme-bottom-nav">
<h2 class="vigme-bottom-nav-header vigme-font col-xs-offset-1"><span class="demo-heading-note"></span>
  <a style="text-decoration: none;" class="vigme-nav-text col-md-offset-1 vigme-logo-text" href="<%= social_feed_path %>">Feed</a>

  <a style="text-decoration: none;" class="vigme-nav-text col-md-offset-0 vigme-logo-text" href="<%= root_url %>">Browse</a>
  <span class="col-md-offset-7">
    <button class="vigme-post-button btn btn-primary btn-lg" data-toggle="modal" data-target="#share_modal">
  Share
    </button>
  </span>

  <span>
<% if user_signed_in? %>
          <a href="/profile/<%= session[:user_id] %>" class="vigme-header-profile"><%= image_tag session[:user_image], class: "vigme-header-avatar" %></a>

<% end %>

  </span>




</h2>
</div>


<% else %>

<div class="vigme-nav-no-user">
<h3 class="vigme-logo vigme-font col-xs-offset-1"><span class="demo-heading-note"></span>VigMe</h3>
</div>
<div >
<%= image_tag '/assets/home-image.jpg', :class => "vigme-home-image" %>
<div class="row">

</div>
<div class="vigme-header-spacing">
  </div>
</div>

<div class="row swatches demo-tiles">
        <div class="col-xs-12 col-md-3 col-md-offset-1">
          <div class="tile">
            <%= image_tag "/assets/compas.svg", class: "tile-image" %>
  
            <h3 class="tile-title">Discover.</h3>
            <p class="tile-content">Shop from over 10 million products, all catered to you.</p>
              <button class="btn btn-primary btn-large btn-block" data-toggle="modal" data-target="#signup_modal">
            Sign Up!
              </button>          </div>
        </div>

        <div class="col-xs-12 col-md-3">
          <div class="tile">
            <%= image_tag "/assets/chat.svg", class: "tile-image" %>

            <h3 class="tile-title">Trend.</h3>
            <p class="tile-content">Share your style with friends and follow celebrities and trendsetters.</p>

            <%= button_to 'Sign Up!', {controller: 'users/registrations', action: 'new'}, :method => :get, :class => 'btn btn-primary btn-large btn-block', :remote => true, 'data-toggle' => 'modal', 'data-target' => '#signup_modal' %>
         
          </div>
        </div>

        <div class="col-xs-12 col-md-3">
          <div class="tile tile-hot">
            <%= image_tag "/assets/gift-box.svg", class: "tile-image" %>
            <h3 class="tile-title">Earn.</h3>
            <p class="tile-content">Get paid for every sale you generate with your shares.</p>
              <button class="btn btn-primary btn-large btn-block" data-toggle="modal" data-target="#signup_modal">
            Sign Up!
              </button>
                        </div>

        </div>
      
  </div>
<% end %>