<% if session[:user_id] || !@home_page %>
<div class="vigme-nav">
<h2 class="vigme-logo col-xs-offset-1"><span class="demo-heading-note"></span><a href="<%= root_url %>">VigMe</a>
  <span class="col-md-offset-3">
    <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#post_product">
  Post Product
    </button>
  </span>
 <a href="/profile/<%= session[:user_id] %>" class="vigme-header-profile">   <%= image_tag session[:user_image] %></a></h2>
</div>


<% else %>

<div class="vigme-nav">
<h2 class="vigme-logo col-xs-offset-1"><span class="demo-heading-note"></span>VigMe</h2>
</div>

<div class="row swatches demo-tiles">
        <div class="col-xs-12 col-md-3 col-md-offset-1">
          <div class="tile">
            <img src="/assets/icons/svg/paper-bag.svg" alt="PaperBag" class="tile-image">
            <h3 class="tile-title">Discover.</h3>
            <p>Shop from over 10 million products, all catered to you.</p>
            <a class="btn btn-primary btn-large btn-block" href="/auth/facebook">Sign Up!</a>
          </div>
        </div>

        <div class="col-xs-12 col-md-3">
          <div class="tile">
            <img src="/assets/icons/svg/chat.svg" alt="Chat" class="tile-image">
            <h3 class="tile-title">Trend</h3>
            <p>Share your style with friends and follow celebrities and trendsetters.</p>
            <a class="btn btn-primary btn-large btn-block" href="/auth/facebook">Sign Up!</a>
          </div>
        </div>

        <div class="col-xs-12 col-md-3">
          <div class="tile tile-hot">
            <img src="/assets/icons/svg/gift-box.svg" alt="gift" class="tile-image">
            <h3 class="tile-title">Earn.</h3>
            <p>Get paid for every sale you generate with your shares.</p>
            <a class="btn btn-primary btn-large btn-block" href="/auth/facebook">Sign Up!</a>
          </div>

        </div>
      
  </div>
<% end %>