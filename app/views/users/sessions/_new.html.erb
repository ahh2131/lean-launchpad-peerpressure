<div class="row">
	<div class="col-md-offset-0">
<h2 class="vigme-center-text">Sign up</h2>
	</div>
</div>

<div class="row">
	<div class="col-md-offset-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :Name %><br />
  <%= f.text_field :name, class: "vigme-settings-field" %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: "vigme-settings-field" %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "vigme-settings-field" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "vigme-settings-field" %></div><br>

  <div><%= f.submit "Sign up", class: "vigme-settings-button" %></div>
<% end %>
<%= render "devise/shared/links" %>

</div>
</div>

