<div id="product_detail_modal_body" class="modal-body">
<% if !notice.nil? %>
<p id="notice"><%= notice %></p>
<% end %>
<% if !@product_shared_by[0].nil? %>

<div class="vigme-product-header row">
	<div class="col-md-1 col-xs-offset-1 col-sm-offset-1 col-md-offset-1">
		<% if @original_poster.avatar.exists? %>
		<a href="<%= profile_path(@original_poster.id) %>"><%= image_tag @original_poster.avatar.url, :class => "vigme-product-detail-header-poster" %>
		</a>
		<% end %>
	</div>
	<div class="col-md-4">
		<h3 class="vigme-header-5">posted by <a href="<%= profile_path(@original_poster.id) %>"><%= @original_poster.name %></a></h3>
	</div>
	<div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-5">
			<div class="row">
				<div class="col-md-offset-3">
					<h3 class="vigme-header-5">People Who Saved This</h3>
				</div>
				<div class="col-md-offset-3">
				<% @product_shared_by.each do |user| %>
						<a href="<%= profile_path + "/" + user.id.to_s %>">
							<% if user.avatar.exists? %>
								<%= image_tag user.avatar.url, :class => "vigme-product-header-image" %>
							<% else %>
								<%= image_tag "missing-image.png", :class => "vigme-product-header-image" %>
							<% end %>
						</a>
				<% end %>
				</div>
			</div>
	</div>
</div>

<div class="row">

	<div class="col-md-offset-1 col-md-10 vigme-line"></div>
</div>
<% end %>


<div class="row">
	<div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1">
	<p>
	 <h3 class="vigme-header-2"><%= @product.name %></h3>
	</p>
</div>
</div>

<div class="row">
<div class="vigme-product-detail-outline col-md-5 col-xs-offset-0 col-sm-offset-0">

 <img src="<%= @product.image_s3_url || "http://www.vigme.com/photos/" + @product.image_folder.to_s + "/" + @product.id.to_s %>" class="vigme-product-detail-image" >
 <div class="row">

 	<a href="//www.pinterest.com/pin/create/button/?url=http://vigme.com&media=<%= @product.image_s3_url %>&description=<%= @product.name %>" data-pin-do="buttonPin" data-pin-config="beside"><img src="//assets.pinterest.com/images/pidgets/pinit_fg_en_rect_gray_20.png" /></a>
 	<!-- Please call pinit.js only once per page -->
 	<script type="text/javascript" async src="http://assets.pinterest.com/js/pinit.js"></script>

 	 <iframe allowtransparency="true" frameborder="0" scrolling="no"
 	         src="https://platform.twitter.com/widgets/tweet_button.html?url=http://www.vigme.com/product/<%= @product.id %>"
 	         style="width:130px; height:20px;"></iframe>
 </div>
</div>

<% if user_signed_in? %>
<div class="vigme-button-div col-md-6 col-md-offset-0 col-xs-offset-1 col-sm-offset-1">
	<div class="row">
		<div class="col-md-4">
		<%= button_to 'Buy', {controller: 'products', action: 'buy', :product => @product.id}, :method => :post, :class => 'vigme-button btn btn-primary', :remote => true, 'data-toggle' => 'modal', 'data-target' => '#buy_modal' %>

		<%= button_to 'Save', {controller: 'products', action: 'share', :product => @product.id}, :method => :post, :class => 'vigme-product-detail-save vigme-button btn btn-primary', :remote => true, 'data-toggle' => 'modal', 'data-target' => '#list_modal' %>
		</div>
		<div class="col-md-4">
			<% if @product.price != 0 %>
			<h3 class="vigme-product-detail-price vigme-header-4">$<%= @product.price %></h3>
			<% end %>
		</div>
	</div>
<% else %>
<div class="vigme-button-div col-md-4">
<a href="/auth/facebook">
<button type="button" class="vigme-button btn btn-primary">Sign Up to Buy and Share!</button>
</a>


<% end %>
<% if !@retailer_user.nil? %>
<div class="row">
	<div class="col-md-10">
		<h3 class="vigme-header-3">
			more from <a href="/profile/<%= @retailer_user.id %>"><%= @retailer.name %></a>
		</h3>
	</div>
</div>
<div class="vigme-similar-products col-md-12">
	<%= render "shared/product_list_mini", products: @other_products_from_retailer %>
</div>
<% end %>
</div> 

</div>

<% if @similar_products.count != 0 %>
<div class="col-md-offset-1 col-md-8 vigme-line"></div>

<div class="row">
	<div class="col-md-12 col-xs-offset-1 col-sm-offset-1 col-md-offset-1">
	<p>
	 <h3 class="vigme-header-3">People who liked this also liked</h3>
	</p>
</div>
</div>

<div class="row">
	<div id="product-list-modal" class="col-md-11 col-md-offset-1">
	<%= render 'shared/product_list', products: @similar_products %>
	</div>
</div>

<a style="display: none"><%= button_to 'More', {:controller => "products", :action => "show", :more => 1, :id => @product.id, :modal => 1}, id: 'more_products_modal', :method => :get, remote: true %></a>

<% end %>

<div class="modal fade" id="buy_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div id="buy-modal-dialog" class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      </div>


    <!--  <div id="buy_modal_body" class="modal-body">
      	<iframe id="product-iframe" name="buy_box" src="<%= @product.buy_url %>" frameborder="0" style="width:100%;height:100%"></iframe>

      </div> -->
<div class="modal-footer">

      <%= link_to 'Bought It!', easymarklet_js('bookmarklet/insite_bought_bookmarklet.js') %>
</div>
    </div>
  </div>
</div>

</div>
</div>
